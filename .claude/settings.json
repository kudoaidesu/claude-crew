{
  "permissions": {
    "allow": [
      "mcp__serena__think_about_collected_information",
      "mcp__playwright__*",
      "mcp__context7__*",
      "Bash(gh api:*)",
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(npx tsx:*)",
      "Bash(npx:*)",
      "Bash(docker:*)",
      "Bash(sleep:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rm -f:*)",
      "Bash(ifconfig:*)",
      "Edit",
      "Write",
      "Read",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/guard-destructive.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/notify-risky.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
